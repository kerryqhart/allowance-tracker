{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Allowance Tracker",
  "version": "0.1.0",
  "identifier": "com.allowancetracker.app",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "cd frontend && trunk serve --port 8080",
    "beforeBuildCommand": "cd frontend && trunk build"
  },
  "app": {
    "windows": [
      {
        "title": "Allowance Tracker",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
